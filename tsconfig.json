{
    "compilerOptions": {
        "experimentalDecorators": true,
        "rootDir": "src",
        "outDir": "dist",
        "target": "es2017",
        "declaration": false,
        "module": "commonjs",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true
    },
    "include": ["./src/"],
    "exclude": ["node_modules"]
}

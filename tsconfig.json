{
    "compilerOptions": {
        "experimentalDecorators": true,
        "rootDir": "src",
        "outDir": "dist",
        "target": "es2017",
        "declaration": false,
        "module": "commonjs",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "noEmit": true,
        "skipLibCheck": true,
    },
    "include": ["./src/", "./**/*.ts"],
    "exclude": ["node_modules"]
}
